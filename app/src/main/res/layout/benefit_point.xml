<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10">

            <LinearLayout
                android:paddingBottom="@dimen/dp40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp200"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/go" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp20"
                    android:paddingRight="@dimen/dp20"
                    android:text="Bạn sẽ kiếm được Go Point bằng cách thực hiện giao dịch trên ticketgo.vn. Go Point có thể có thể đổi được những phần quà hấp dẫn, hoặc đổi được vé từ chúng tôi hoặc bên đối tác." />

                <TextView
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp20"
                    android:paddingRight="@dimen/dp20"
                    android:text="Go Point cũng có thể dùng trong giảm giá vé khi bạn đặt vé." />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="@dimen/dp30"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xếp loại hội viên trên trên Go Point" />

                <TextView
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành viên trên ticketgo.vn được chia thành ra Basic Member(thành viên cơ bản) và Elite Member(Thành viên ưu tú)." />

                <TextView
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tất cả thành viên sẽ trở thành Basic Member khi họ bắt đầu đăng kí. Để trở thành thành Elite Member, bạn cần tích 10.000 Go Point trong một năm." />

                <TextView
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nếu bạn đang là Elite Member, khi muốn duy trì được làm Elite Member trong năm sau, bạn chỉ cần tích đủ 5.000 Go Point trong 1 năm là bạn vẫn kich hoạt được goi Elite Member" />

                <TextView
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khi trở thành Elite Member bạn sẽ được hưởng nhiều lợi ích và quảng cáo cụ thể cho bạn." />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
