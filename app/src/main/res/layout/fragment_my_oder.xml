<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp60"
    android:orientation="vertical"
    tools:context="com.example.taipv.ticketgo.view.fragment.MyOder">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <com.example.taipv.ticketgo.util.OpenTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_card_title_name"
        android:text="@string/your_name"
        android:gravity="center_horizontal"
        android:textColor="@color/black_100"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginBottom="@dimen/dp30"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp250"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ticketbasic" />


    <com.example.taipv.ticketgo.util.OpenTextView
        android:id="@+id/tv_name_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="59dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:text="@string/your_name"
        android:textColor="@color/white_100"
        android:textStyle="bold" />

    <com.example.taipv.ticketgo.util.OpenTextView
        android:id="@+id/tv_point_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="62dp"
        android:text="0"
        android:textColor="@color/white_100"
        />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        >
        <ImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:src="@drawable/coin"
            />
        <com.example.taipv.ticketgo.util.OpenTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic"
            android:layout_marginLeft="@dimen/dp10"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <com.example.taipv.ticketgo.util.OpenTextView
            android:id="@id/tv_point_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0 "
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <com.example.taipv.ticketgo.util.OpenTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_point"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <com.example.taipv.ticketgo.util.OpenTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/member_since"
            />
        <com.example.taipv.ticketgo.util.OpenTextView
            android:id="@+id/member_since"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 01/01/2018"
            />

    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp30"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_card_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
</LinearLayout>
