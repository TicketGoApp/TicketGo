<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.taipv.ticketgo.view.activity.profile.ContactUs">

    <ImageView
        android:id="@+id/avatar_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp170"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/contactus" />
    <LinearLayout
        android:id="@+id/content_contact"
        android:layout_below="@id/avatar_contact"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tru_so_ha_noi"
            android:textColor="@color/black_100"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:paddingRight="@dimen/dp10"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/websiteicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_100"
                android:text="@string/website_company" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:paddingRight="@dimen/dp10"

                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/emailicon" />

            <TextView
                android:textColor="@color/black_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_company" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:paddingRight="@dimen/dp10"

                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/timeicon" />

            <TextView
                android:textColor="@color/black_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fulltime" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:paddingRight="@dimen/dp10"

                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/phoneicon" />

            <TextView
                android:textColor="@color/black_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotline" />
            <TextView
                android:id="@+id/hotline_hn"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:textColor="#5dd239"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/hotline_hn" />
            <TextView
                android:textColor="@color/black_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/space" />
            <TextView
                android:id="@+id/hotline_hcm"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:textColor="#5dd239"
                android:layout_height="wrap_content"
                android:text="@string/hotline_hcm" />


        </LinearLayout>

        <LinearLayout
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:paddingRight="@dimen/dp10"

                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/location" />

            <TextView
                android:textColor="@color/black_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dia_chia" />
        </LinearLayout>


    </LinearLayout>

    <fragment
        android:layout_below="@id/content_contact"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp400"
        tools:context=".MapsActivity" />

</RelativeLayout>