<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lyt_book"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="true">

        <include
            android:id="@+id/content"
            layout="@layout/content_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
    <RelativeLayout
        android:id="@+id/lyt_book"
        android:background="@color/black_75"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Từ 100.000 VNĐ"
            android:textColor="@color/white_100"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btnBookNow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/button_book"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp60"
            android:text="@string/booknow"
            android:textColor="@color/white_100"
            />
    </RelativeLayout>
</RelativeLayout>