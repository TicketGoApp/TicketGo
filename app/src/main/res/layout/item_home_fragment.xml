<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp10"
        android:clickable="true"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/lyt_item_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp10"
            >

            <ImageView
                android:id="@+id/img_ticket"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView

                android:id="@+id/tv_title_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_ticket"
                android:lines="1"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:textColor="#111"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Title"
                />

            <TextView
                android:id="@+id/tv_decription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_ticket"
                android:layout_marginRight="10dp"
                android:text="xin chao day la phan mo ta"
                android:paddingBottom="@dimen/dp5"
                android:paddingLeft="@dimen/dp10"
                android:textColor="@color/colorGray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_decription"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="@dimen/dp10"
                android:text="Ha Noi"
                android:paddingBottom="@dimen/dp5"
                android:paddingLeft="@dimen/dp10"
                android:textColor="@color/viewBg"
                android:background="@drawable/tag_city"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_decription"
                android:layout_toRightOf="@id/tv_location"
                android:layout_marginRight="10dp"
                android:text="@string/price"
                android:paddingBottom="@dimen/dp5"
                android:paddingLeft="@dimen/dp10"
                android:textColor="@color/black"
                android:background="@drawable/tag_price"
                android:textSize="14sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>